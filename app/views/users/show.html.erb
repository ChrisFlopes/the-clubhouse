<div class="container">
  <h2><%= @user.last_name %>, <%= @user.first_name %></h2>
  <p><%= @user.email %></p>
  <p><%= @user.description %></p>
  <h3><%= @user.skill_level %></h3>

  <%= link_to "Edit", edit_user_path, class: "btn btn-flat" %>

  <%= link_to "Delete", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete #{@user.first_name} #{@user.last_name}?" }, class: "btn btn-flat" %>

</div>
