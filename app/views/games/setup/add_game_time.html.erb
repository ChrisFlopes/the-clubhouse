<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <div class="wizard-card">
        <div class="wizard-card-header">
            <%= image_tag "mostplayed.png" %>
            <h2>Set The Date</h2>
            <%= image_tag "mostplayed.png" %>
        </div>
          <%= simple_form_for @game, url: wizard_path, method: :put do |f| %>
          <div class="wizard-card-item">
            <%= f.date_field :date, min: Date.today %>
            <%= f.time_field :time, min: Time.now %>
          </div>
          <div class="wizard-card-item">
            <%= f.submit 'continue' %>
          </div>
          <% end %>

        <%= link_to "Back", previous_wizard_path %>
      </div>
    </div>
  </div>
</div>
